{% extends 'base.html.twig' %}

{% block title %}Source{% endblock %}

{% block body %}
    <h1>Source</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ source.id }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ source.content }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ source.type }}</td>
            </tr>
            <tr>
                <th>Url</th>
                <td>{{ source.url }}</td>
            </tr>
            <tr>
                <th>AddedAt</th>
                <td>{{ source.addedAt ? source.addedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('source_index') }}">back to list</a>

    <a href="{{ path('source_edit', {'id': source.id}) }}">edit</a>

    {{ include('source/_delete_form.html.twig') }}
{% endblock %}
