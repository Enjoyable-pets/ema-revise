{% extends 'base.html.twig' %}

{% block title %}Source index{% endblock %}

{% block body %}
    <h1>Source index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>AddedAt</th>
                <th>Url</th>
                <th>Type</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for source in sources %}
            <tr>
                <td>{{ source.id }}</td>
                <td>{{ source.addedAt ? source.addedAt|date('Y-m-d') : '' }}</td>
                <td><a href="{{ source.url }}">{{ source.url }}</a></td>
                <td>{{ source.type }}</td>
    
                <td>
                    <a href="{{ path('source_show', {'id': source.id}) }}">show</a>
                    <a href="{{ path('source_edit', {'id': source.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('source_new') }}">Create new</a>
{% endblock %}
